@model ProjectTest.Models.Exam

@{
    ViewData["Title"] = "Edit Exam";
}

<h2>Edit Exam</h2>

<form asp-action="Edit" asp-route-subjectId="@Model.SubjectId" asp-route-studentId="@Model.StudentId">
    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <input asp-for="SubjectId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="StudentId"></label>
        <input asp-for="StudentId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Mark"></label>
        <input asp-for="Mark" class="form-control" />
        <span asp-validation-for="Mark" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index">Back to List</a>
</form>
