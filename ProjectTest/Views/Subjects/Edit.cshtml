@model ProjectTest.Models.Subject

@{
    ViewData["Title"] = "Edit Subject";
}

<h2>Edit Subject</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="SubjectName"></label>
        <input asp-for="SubjectName" class="form-control" />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="SubjectId" />
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

<p>
    <a asp-action="Details" asp-route-id="@Model.SubjectId">Back to Details</a> |
    <a asp-action="Index">Back to List</a>
</p>
