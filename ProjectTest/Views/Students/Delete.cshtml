@model ProjectTest.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<div>
    <h4>Are you sure you want to delete this student?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StudentName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StudentRollId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudentRollId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StudentDOB)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StudentDOB.ToString("yyyy-MM-dd"))
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="StudentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index">Back to List</a>
    </form>
</div>
