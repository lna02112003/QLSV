@model ProjectTest.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<h2>Edit Student</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="StudentId" />

    <div class="form-group">
        <label asp-for="StudentName"></label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentRollId"></label>
        <input asp-for="StudentRollId" class="form-control" />
        <span asp-validation-for="StudentRollId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentDOB"></label>
        <input asp-for="StudentDOB" class="form-control" />
        <span asp-validation-for="StudentDOB" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<p>
    <a asp-action="Details" asp-route-id="@Model.StudentId">Back to Details</a> |
    <a asp-action="Index">Back to List</a>
</p>
