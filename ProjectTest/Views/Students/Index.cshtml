@model List<ProjectTest.Models.Student>

@{
    ViewData["Title"] = "Students Index";
}

<h2>Students Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Student</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>Student Name</th>
            <th>Student RollId</th>
            <th>Date of Birth</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.StudentName</td>
                <td>@student.StudentRollId</td>
                <td>@student.StudentDOB.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.StudentId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@student.StudentId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@student.StudentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
